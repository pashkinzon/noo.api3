@inherits ComponentBase

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Title</title>
    <style>
        /* General Reset */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background-color: #f4f4f4;
        }
        table {
            border-spacing: 0;
            border-collapse: collapse;
        }
        a {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body style="
	margin: 0; 
	padding: 0; 
	background-color: @Variables.BackgroundColor; 
	font-family: 'Montserrat', Arial, sans-serif;
">
    <table width="600" cellpadding="0" cellspacing="0" border="0" style="
		background-color: @Variables.BackgroundColor; 
		border-radius: 10px; 
		padding: 0;
		margin: 0 auto; 
		font-family: 'Montserrat', Arial, sans-serif;
	">
		<!-- Header -->
		<tr>
			<td align="left" style="
				padding: 20px;
				vertical-align: middle;
			">
				<h1 style="
					font-weight: 200; 
					color: @Variables.HeaderColor; 
					margin: 0; 
					font-family: 'Montserrat', Arial, sans-serif;
				">
					<b style="
						font-weight: 800;
					">НОО.</b>
					Платформа
				</h1>
				<h3 style="
					margin: 0; 
					font-family: 'Montserrat', Arial, sans-serif;
				">
					@Title
				</h3>
			</td>
		</tr>

		<!-- Content -->
		<tr>
			<td>
				<div class="content" style="
					padding: 20px 0; 
					font-size: 16px; 
					line-height: 1.5; 
					color: @Variables.TextColor; 
					font-family: 'Montserrat', Arial, sans-serif;
				">
					@ChildContent
				</div>
			</td>
		</tr>

		<!-- Footer -->
		<tr>
			<td align="center" style="
				padding-top: 20px; 
				font-size: 12px; 
				color: @Variables.TextColor; 
				font-family: 'Montserrat', Arial, sans-serif;
			">
				<p style="margin: 0;">
					© @DateTime.Now.Year НОО.Платформа. Все права защищены.
					<br>
					<a href="https://no-os.ru/confidentiality" style="
						color: @Variables.TextColor;
						text-decoration: underline;
					">
						Политика конфиденциальности
					</a>
					|
					<a href="https://no-os.ru/oferta" style="
						color: @Variables.TextColor;
						text-decoration: underline;
					">
						Договор публичной оферты
					</a>
				</p>
			</td>
		</tr>
	</table>
</body>
</html>

@code {
    [Parameter]
    public string Title { get; set; } = default!;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;
}
